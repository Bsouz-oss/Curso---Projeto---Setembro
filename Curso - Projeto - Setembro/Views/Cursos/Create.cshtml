@model Curso

<h2>Criar Curso</h2>

<form asp-action="Create">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" />
    </div>
    <div>
        <label>Descrição:</label>
        <input asp-for="Descricao" />
    </div>
    <div>
        <label>Data de Início:</label>
        <input asp-for="DataInicio" type="date" />
    </div>
    <div>
        <label>Data de Término:</label>
        <input asp-for="DataFim" type="date" />
    </div>
    <div>
        <label>Carga Horária:</label>
        <input asp-for="CargaHoraria" type="number" />
    </div>
    <button type="submit">Salvar</button>
</form>
